terraform {
  required_version = ">= 1.3.8"
  required_providers {
    aws = {
      source = "hashicorp/aws"
      #version = "~> 4.57.1"
    }
    kubectl = {
      source  = "gavinbunney/kubectl"
      version = ">= 1.14.0"
    }
  }
}

provider "aws" {
  region = data.aws_region.current.name
  alias  = "default"
}

